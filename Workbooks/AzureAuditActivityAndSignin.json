    {
      "type": 3,
      "content": {
        "version": "KqlItem/1.0",
        "query": "AzureActivity\n| extend ActivityType = case(OperationName contains \"delete\", \"Deleted\",\n                             OperationName contains \"create\", \"Created\",\n                             OperationName contains \"Update\", \"Updated\", \"Other\") // Group ActivtyType with custom name\n| summarize Succeeded = countif(ActivityStatus == \"Succeeded\"), Failed = countif(ActivityStatus == \"Failed\") by ResourceProvider, ActivityType\n| extend SuccesRate = Succeeded * 100 / (Succeeded + Failed) // Calculate SuccesRate percentage\n| where isnotempty(SuccesRate)\n| top 10 by SuccesRate asc \n| project ActivityType, ResourceProvider, SuccesRate, Succeeded, Failed ",
        "size": 0,
        "title": "Least successrate by Action and ResourceProvider",
        "timeContext": {
          "durationMs": 0

{
  "$schema": "https://schema.management.azure.com/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "The Azure region where the resources will be deployed."
      },
      "defaultValue": "East US"
    },
    "solutionName": {
      "type": "string",
      "metadata": {
        "description": "The name of the solution to be deployed."
      },
      "defaultValue": "CTERA Solution"
    },
    "solutionVersion": {
      "type": "string",
      "metadata": {
        "description": "The version of the solution being deployed."
      },
      "defaultValue": "1.0.0"
    }
  },
  "variables": {
    "solutionId": "ctera-solution",
    "solutionName": "[parameters('solutionName')]",
    "solutionVersion": "[parameters('solutionVersion')]",
    "location": "[parameters('location')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "mainDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(concat('https://raw.githubusercontent.com/your-repo/', variables('solutionId'), '/mainTemplate.json'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "solutionName": {
            "value": "[parameters('solutionName')]"
          },
          "solutionVersion": {
            "value": "[parameters('solutionVersion')]"
          }
        }
      }
    }
  ]
}
